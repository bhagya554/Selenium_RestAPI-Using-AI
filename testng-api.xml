<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AutomationExercise_API_Suite"
       parallel="tests"
       thread-count="3"
       verbose="2">

    <!-- API Test Classes (Each Runs in Parallel Thread) -->
    <test name="Products API Tests">
        <classes>
            <class name="com.seleniumframeworkusingai.tests.api.ProductsAPITests"/>
        </classes>
    </test>

    <test name="Brands API Tests">
        <classes>
            <class name="com.seleniumframeworkusingai.tests.api.BrandsAPITests"/>
        </classes>
    </test>

    <test name="Search API Tests">
        <classes>
            <class name="com.seleniumframeworkusingai.tests.api.SearchAPITests"/>
        </classes>
    </test>

    <test name="Auth API Tests">
        <classes>
            <class name="com.seleniumframeworkusingai.tests.api.AuthAPITests"/>
        </classes>
    </test>

</suite>
